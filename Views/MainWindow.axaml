<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PrinterMonitorDemo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PrinterMonitorDemo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Printer Monitor Demo">

    <Grid Margin="20" RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" 
                   Text="Printer Head Monitor" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*" 
              RowDefinitions="*,*" 
              Margin="10">
            
            <!-- Temperature Panel -->
            <Border Grid.Row="0" 
                    Grid.Column="0" 
                    Background="#1e1e1e" 
                    Margin="5" 
                    CornerRadius="5" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Temperature" 
                             FontSize="18" 
                             FontWeight="Bold"/>
                    <TextBlock Text="{Binding PrinterHead.Temperature, StringFormat={}{0:F1}Â°C}" 
                             FontSize="24" 
                             Foreground="#00ff00"/>
                </StackPanel>
            </Border>

            <!-- Position Panel -->
            <Border Grid.Row="0" 
                    Grid.Column="1" 
                    Background="#1e1e1e" 
                    Margin="5" 
                    CornerRadius="5" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Position" 
                             FontSize="18" 
                             FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" 
                              Spacing="10">
                        <TextBlock Text="X:" 
                                 FontSize="16"/>
                        <TextBlock Text="{Binding PrinterHead.XPosition, StringFormat={}{0:F1}}" 
                                 FontSize="16"/>
                        <TextBlock Text="Y:" 
                                 FontSize="16" 
                                 Margin="10,0,0,0"/>
                        <TextBlock Text="{Binding PrinterHead.YPosition, StringFormat={}{0:F1}}" 
                                 FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Ink Level Panel -->
            <Border Grid.Row="1" 
                    Grid.Column="0" 
                    Background="#1e1e1e" 
                    Margin="5" 
                    CornerRadius="5" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Ink Level" 
                             FontSize="18" 
                             FontWeight="Bold"/>
                    <ProgressBar Value="{Binding PrinterHead.InkLevel}" 
                               Maximum="100" 
                               Height="20" 
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding PrinterHead.InkLevel, StringFormat={}{0:F1}%}" 
                             FontSize="16" 
                             HorizontalAlignment="Center" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Status Panel -->
            <Border Grid.Row="1" 
                    Grid.Column="1" 
                    Background="#1e1e1e" 
                    Margin="5" 
                    CornerRadius="5" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Status" 
                             FontSize="18" 
                             FontWeight="Bold"/>
                    <TextBlock Text="{Binding PrinterHead.Status}" 
                             FontSize="24" 
                             Foreground="#00ff00"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>